{
  "name": "service-narrative-engine-project",
  "version": "0.1.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/a-novel/service-narrative-engine.git"
  },
  "license": "AGPL-3.0",
  "type": "module",
  "workspaces": [
    "."
  ],
  "scripts": {
    "build": "pnpm build:rest && pnpm types:rest && pnpm types:rest-test",
    "build:rest": "rm -rf ./pkg/rest-js/dist && vite build --outDir ./pkg/rest-js/dist -c pkg/rest-js/vite.config.ts",
    "format": "pnpm run format:prettier",
    "format:prettier": "prettier --write . --config prettier.config.ts",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "pnpm build && pnpm i --ignore-scripts",
    "lint": "pnpm lint:stylecheck && pnpm lint:typecheck && pnpm lint:eslint && pnpm run lint:openapi",
    "lint:eslint": "eslint .",
    "lint:openapi": "pnpm redocly lint openapi.yaml",
    "lint:stylecheck": "prettier --check . --config prettier.config.ts",
    "lint:typecheck": "pnpm lint:typecheck:base && pnpm lint:typecheck:rest-js && pnpm lint:typecheck:test:rest-js",
    "lint:typecheck:base": "tsc --noEmit",
    "lint:typecheck:rest-js": "pnpm tsc --p ./pkg/rest-js/tsconfig.json --noEmit",
    "lint:typecheck:test:rest-js": "pnpm tsc --p ./pkg/test/rest-js/tsconfig.json --noEmit",
    "prepublish:doc": "pnpm prepublish:doc:readme && pnpm prepublish:doc:openapi",
    "prepublish:doc:openapi": "bash scripts/prepublish-version.sh 'version: ' openapi.yaml",
    "prepublish:doc:readme": "bash scripts/prepublish-version.sh 'a-novel/service-narrative-engine/[^/]+' README.md",
    "publish:major": "bash scripts/publish.sh major",
    "publish:minor": "bash scripts/publish.sh minor",
    "publish:patch": "bash scripts/publish.sh patch",
    "test": "vitest run -c vitest.config.ts",
    "types:rest": "tsc --build pkg/rest-js/tsconfig.build.json",
    "types:rest-test": "tsc --p ./pkg/test/rest-js/tsconfig.json --noEmit"
  },
  "devDependencies": {
    "@a-novel-kit/nodelib-config": "^1.3.6",
    "@eslint/js": "^9.39.2",
    "@redocly/cli": "^2.14.5",
    "@trivago/prettier-plugin-sort-imports": "^6.0.0",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "glob": "^13.0.0",
    "globals": "^17.0.0",
    "jiti": "^2.6.1",
    "js-yaml": "^4.1.1",
    "jsdom": "^28.0.0",
    "prettier": "^3.7.4",
    "prettier-plugin-packagejson": "^3.0.0",
    "prettier-plugin-sql": "^0.19.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.0",
    "vite": "^7.3.0",
    "vitest": "^4.0.16"
  },
  "packageManager": "pnpm@10.28.2",
  "engines": {
    "node": ">=23.11.0",
    "npm": ">=10.9.2"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  }
}
